<Window x:Class="PaintProgram.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presenation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Paint Program" Width="800" Height="600">  

    <Grid>
        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Margin="5">
            <!-- Different Drawing Tools -->
            <Button Content="Line" Click="LineTool_Click"/>
            <Button Content="Circle" Click="CircleTool_Click"/>
            <Button Content="Rectangle" Click="RectangleTool_Click"/>

            <!-- Color Picker -->
            <ColorPicker x.Name="colorPicker" SelectedColorChanged="ColorPicker_SelectedColorChanged"/>

            <!-- Brush size -->
            <Slider x.Name="brushSizeSlider" Width="100" Minimum="1" Maximnum="10" Value="1"
                TickFrequency="1" TickPlacement="BottomRight"
                ValueChanged="BrushSizeSlider_ValueChanged"/>
        </StackPanel>

        <!-- Canvas -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Canvas x:Name="drawingCanvas" Background="White" MouseDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove" MouseUp="Canvas_MouseUp"/>
        <ScrollViewer/>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="20">
            <StatusBarItem>
                <TextBlock x:Name="statusText"/>
            <StatusBarItem/>
        <StatusBar/>
    </Grid>
</Window>